<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:scaleType="fitXY"
            android:src="@drawable/survey" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="130sp"
            android:layout_marginRight="20sp"
            android:layout_marginEnd="20sp"
            android:clickable="true"
            android:onClick="submit"
            app:backgroundTint="#303F9F"
            app:srcCompat="@drawable/correct_green" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/back" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/next" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/search" />

                </LinearLayout>

            </LinearLayout>

            <customfonts.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="20sp"
                android:text="@string/questionnaire_prompt"
                android:textColor="#F3F8FF"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:text="@string/questionnaire_question_1"
            android:textSize="16sp"
            android:typeface="sans" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/q1_ans1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginLeft="15sp"
                android:text="@string/questionnaire_answer_1"
                android:textColor="#3989AE"
                android:textSize="14sp"
                android:typeface="sans"
                android:onClick="onRadioButtonClick"/>

            <RadioButton
                android:id="@+id/q1_ans2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginLeft="15sp"
                android:text="@string/questionnaire_answer_2"
                android:textColor="#3989AE"
                android:textSize="14sp"
                android:typeface="sans"
                android:onClick="onRadioButtonClick"/>

            <RadioButton
                android:id="@+id/q1_ans3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginLeft="15sp"
                android:text="@string/questionnaire_answer_3"
                android:textColor="#3989AE"
                android:textSize="14sp"
                android:typeface="sans"
                android:onClick="onRadioButtonClick"/>

            <RadioButton
                android:id="@+id/q1_ans4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginLeft="15sp"
                android:text="@string/questionnaire_answer_4"
                android:textColor="#3989AE"
                android:textSize="14sp"
                android:typeface="sans"
                android:onClick="onRadioButtonClick"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:text="@string/questionnaire_question_2"
            android:textSize="16sp"
            android:typeface="sans" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/q2_ans1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginLeft="15sp"
                android:text="@string/questionnaire_answer_1"
                android:textColor="#3989AE"
                android:textSize="14sp"
                android:typeface="sans"
                android:onClick="onRadioButtonClick" />

            <RadioButton
                android:id="@+id/q2_ans2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginLeft="15sp"
                android:text="@string/questionnaire_answer_2"
                android:textColor="#3989AE"
                android:textSize="14sp"
                android:typeface="sans"
                android:onClick="onRadioButtonClick" />

            <RadioButton
                android:id="@+id/q2_ans3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginLeft="15sp"
                android:text="@string/questionnaire_answer_3"
                android:textColor="#3989AE"
                android:textSize="14sp"
                android:typeface="sans"
                android:onClick="onRadioButtonClick" />

            <RadioButton
                android:id="@+id/q2_ans4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginLeft="15sp"
                android:text="@string/questionnaire_answer_4"
                android:textColor="#3989AE"
                android:textSize="14sp"
                android:typeface="sans"
                android:onClick="onRadioButtonClick" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:text="@string/questionnaire_question_3"
            android:textSize="16sp"
            android:typeface="sans" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/q3_ans1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginLeft="15sp"
                android:text="@string/questionnaire_answer_1"
                android:textColor="#3989AE"
                android:textSize="14sp"
                android:typeface="sans" />

            <RadioButton
                android:id="@+id/q3_ans2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginLeft="15sp"
                android:text="@string/questionnaire_answer_2"
                android:textColor="#3989AE"
                android:textSize="14sp"
                android:typeface="sans"
                android:onClick="onRadioButtonClick" />

            <RadioButton
                android:id="@+id/q3_ans3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginLeft="15sp"
                android:text="@string/questionnaire_answer_3"
                android:textColor="#3989AE"
                android:textSize="14sp"
                android:typeface="sans"
                android:onClick="onRadioButtonClick" />

            <RadioButton
                android:id="@+id/q3_ans4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginLeft="15sp"
                android:text="@string/questionnaire_answer_4"
                android:textColor="#3989AE"
                android:textSize="14sp"
                android:typeface="sans"
                android:onClick="onRadioButtonClick" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>

