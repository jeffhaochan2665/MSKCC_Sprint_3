<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:orientation="vertical"
    android:background="@color/white">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="centerCrop"
            android:src="@drawable/feb"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/menu"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="22dp"/>


            <customfonts.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="February"
                android:textSize="32dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="16dp"/>


            <customfonts.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="February"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:gravity="center"/>



            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
                android:layout_marginTop="22dp"
           >


            <!-- Graph 1-->

            <FrameLayout
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                >

                <customfonts.MyTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:text="28 %"
                    android:padding="4dp"
                    />

                <!-- Here is fit chart ... You can set width by  app:strokeSize-->
                <com.txusballesteros.widgets.FitChart


                    android:layout_width="150px"
                    android:layout_height="150px"
                    app:animationMode="overdraw"

                    android:id="@+id/small1"
                    android:layout_gravity="center"
                    app:strokeSize="4dp"
                    app:backStrokeColor="#d8d8d8"


                    />
            </FrameLayout>




            <!-- Graph 2-->

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                >

                <customfonts.MyTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="28dp"
                    android:textColor="@color/white"
                    android:text="54 %"
                    android:padding="4dp"
                    />

                <!-- Here is fit chart ... You can set width by  app:strokeSize-->
                <com.txusballesteros.widgets.FitChart


                    android:layout_width="300px"
                    android:layout_height="300px"
                    app:animationMode="overdraw"

                    android:id="@+id/big"
                    android:layout_gravity="center"
                    app:strokeSize="4dp"
                    app:backStrokeColor="#d8d8d8"


                    />
            </FrameLayout>





            <!-- Graph 3-->

            <FrameLayout
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                >

                <customfonts.MyTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:text="18 %"
                    android:padding="4dp"
                    />

                <!-- Here is fit chart ... You can set width by  app:strokeSize-->
                <com.txusballesteros.widgets.FitChart


                    android:layout_width="150px"
                    android:layout_height="150px"
                    app:animationMode="overdraw"

                    android:id="@+id/small2"
                    android:layout_gravity="center"
                    app:strokeSize="4dp"
                    app:backStrokeColor="#d8d8d8"


                    />
            </FrameLayout>
        </LinearLayout>




            <customfonts.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Good job, You have completed 6% more tasks this month"
                android:textSize="14dp"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="58dp"
                android:layout_marginRight="58dp"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="375dp"
            android:src="@drawable/filter"
            android:layout_gravity="center_horizontal"


            />


        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="430dp"></ListView>


    </FrameLayout>





</LinearLayout>
